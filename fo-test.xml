	<layout-master-set>
		<simple-page-master master-name="intro" page-width="297mm"
				page-height="210mm" margin-top="1cm" margin-bottom="1cm"
				margin-left="1cm" margin-right="1cm">
			<region-body margin="3cm"/>
			<region-before extent="2cm" />
			<region-after extent="2cm" />
			<region-start extent="2cm" />
			<region-end extent="2cm" />
		</simple-page-master>
		<simple-page-master master-name="left">
			<region-body margin-left="2in" margin-right="3in" />
		</simple-page-master>
		<simple-page-master master-name="right">
			<region-body margin-left="3in" margin-right="2in" />
		</simple-page-master>
	</layout-master-set>
	<page-sequence master-reference="A4">
		<flow flow-name="xsl-region-body">
			<block border-width="1mm" font-size="12pt" font-family="sans-serif">
				Hello W3Schools
			</block>
			<block text-indent="5mm" font-family="verdana">
				At W3Schools you will find blah blah blah
			</block>
			<list-block>
				<list-item>
					<list-item-label>
						<block>*</block>
					</list-item-label>
					<list-item-body>
						<block>Volvo</block>
					</list-item-body>
				</list-item>
				<list-item>
					<list-item-label>
						<block>*</block>
					</list-item-label>
					<list-item-body>
						<block>Saab</block>
					</list-item-body>
				</list-item>
			</list-block>
			<table-and-caption>
				<table>
					<table-columm column-width="25mm" />
					<table-column column-width="25mm" />
					<table-header>
						<table-row>
							<table-cell>
								<block font-weight="bold">Car</block>
							</table-cell>
							<table-cell>
								<block font-weight="bold">Price</block>
							</table-cell>
						</table-row>
					</table-header>
					<table-body>
						<table-row>
							<table-cell>
								<block>Volvo</block>
							</table-cell>
							<table-cell>
								<block>$50,000</block>
							</table-cell>

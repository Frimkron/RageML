						<table-row>
							<table-cell>
								<block>SAAB</block>
							</table-cell>
							<table-cell>
								<block>$48,000</block>
							</table-cell>
						</table-row>
					</table-body>
				</table>
			</table-and-caption>
		</flow>
	</page-sequence>
</root>
